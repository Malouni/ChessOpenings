<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#069A8E"
    tools:context=".opening_main_activity">

    <Button
        android:id="@+id/back_opening_button_1"
        android:layout_width="90dp"
        android:layout_height="36dp"
        android:backgroundTint="#006993"
        android:onClick="onClick_opennings_back1"
        android:text="Back"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="264dp"
        android:layout_height="273dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.572">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/italian_opening"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#006993"
                android:onClick="onClick_italian"
                android:text="Italian Game" />

            <Button
                android:id="@+id/sicilian_opening"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#006993"
                android:onClick="onClick_sicilian"
                android:text="Sicilian Defense" />

            <Button
                android:id="@+id/queens_opening"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#006993"
                android:onClick="onClick_queens"
                android:text="Queen's Gambit" />

            <Button
                android:id="@+id/indian_opening"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#006993"
                android:onClick="onClick_indian"
                android:text="Indian Defenses" />

            <Button
                android:id="@+id/carokan_opening"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#006993"
                android:onClick="onClick_carokan"
                android:text="Caro-Kann Defense" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose the oppening you want to practice"
        android:textColor="@color/purple_700"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.275" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="85dp" />

</androidx.constraintlayout.widget.ConstraintLayout>